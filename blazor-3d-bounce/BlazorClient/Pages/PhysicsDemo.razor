@page "/physics-demo"
@using BlazorClient.Services
@using BlazorClient.Domain.Models
@inject IGpuPhysicsService PhysicsService
@inject IRenderingService RenderingService
@implements IAsyncDisposable

<PageTitle>GPU Physics Demo</PageTitle>

<div class="demo-container">
    <div class="controls">
        <h3>GPU Physics Demo</h3>
        
        <div class="status">
            <span class="@(IsGpuActive ? "gpu-active" : "cpu-active")">
                @(IsGpuActive ? "üöÄ GPU Physics" : "üíª CPU Fallback")
            </span>
        </div>
        
        <div class="metrics">
            <div>Bodies: @BodyCount</div>
            <div>Contacts: @ContactCount</div>
            <div>Physics: @PhysicsTimeMs.ToString("F2")ms</div>
            <div>FPS: @Fps.ToString("F0")</div>
        </div>
        
        <div class="actions">
            <button @onclick="SpawnSphere">+ Sphere</button>
            <button @onclick="SpawnBox">+ Box</button>
            <button @onclick="Spawn100">+ 100 Spheres</button>
            <button @onclick="Spawn1000" disabled="@(!IsGpuActive)">+ 1000 Spheres</button>
            <button @onclick="Reset">Reset</button>
            <button @onclick="@(() => IsPaused = !IsPaused)">
                @(IsPaused ? "‚ñ∂ Play" : "‚è∏ Pause")
            </button>
        </div>
    </div>
    
    <canvas id="physics-canvas" @ref="canvasRef"></canvas>
</div>

@code {
    private ElementReference canvasRef;
    private bool _initialized;
    private bool _disposed;
    private System.Threading.Timer? _updateTimer;
    
    // State
    private int BodyCount;
    private int ContactCount;
    private float PhysicsTimeMs;
    private float Fps;
    private bool IsGpuActive;
    private bool IsPaused;
    private int _spawnCounter;
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            await InitializePhysics();
            _initialized = true;
            
            // Start update loop
            _updateTimer = new System.Threading.Timer(
                async _ => await UpdateLoop(),
                null,
                TimeSpan.Zero,
                TimeSpan.FromMilliseconds(16.67)); // 60 FPS
        }
    }
    
    private async Task InitializePhysics()
    {
        // Initialize physics
        var settings = new SimulationSettings
        {
            Gravity = new Vector3(0, -9.81f, 0),
            TimeStep = 1f / 120f,
            SubSteps = 3
        };
        
        await PhysicsService.InitializeAsync(settings);
        await PhysicsService.CreateGroundAsync(0.3f, 0.5f);
        
        // Initialize rendering
        await RenderingService.InitializeAsync("physics-canvas", new RenderSettings
        {
            EnableShadows = true,
            ShowGrid = true
        });
        
        // Check if GPU is active
        IsGpuActive = await PhysicsService.IsGpuAvailableAsync();
        
        // Create initial scene
        await SpawnSphere();
    }
    
    private async Task UpdateLoop()
    {
        if (_disposed || IsPaused) return;
        
        try
        {
            // Step physics
            await PhysicsService.StepAsync(1f / 60f);
            
            // Get transforms and update rendering
            var batch = await PhysicsService.GetTransformBatchAsync();
            // In real app, this would update mesh transforms
            
            // Update metrics
            var metrics = await PhysicsService.GetMetricsAsync();
            BodyCount = metrics.BodyCount;
            ContactCount = metrics.ContactCount;
            PhysicsTimeMs = metrics.TotalStepTimeMs;
            IsGpuActive = metrics.IsGpuActive;
            
            // Calculate FPS
            Fps = PhysicsTimeMs > 0 ? 1000f / PhysicsTimeMs : 60f;
            Fps = Math.Min(Fps, 144f);
            
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Update error: {ex.Message}");
        }
    }
    
    private async Task SpawnSphere()
    {
        var id = $"sphere-{_spawnCounter++}";
        var x = Random.Shared.NextSingle() * 4 - 2;
        var z = Random.Shared.NextSingle() * 4 - 2;
        
        var sphere = new RigidBody(RigidPrimitiveType.Sphere, MaterialPreset.Rubber)
        {
            Id = id,
            Mass = 1.0f,
            Transform = new TransformData
            {
                Position = new Vector3(x, 5 + Random.Shared.NextSingle() * 5, z),
                Scale = new Vector3(1, 1, 1)
            }
        };
        
        await PhysicsService.CreateRigidBodyAsync(sphere);
        await RenderingService.CreateRigidMeshAsync(sphere);
    }
    
    private async Task SpawnBox()
    {
        var id = $"box-{_spawnCounter++}";
        var x = Random.Shared.NextSingle() * 4 - 2;
        var z = Random.Shared.NextSingle() * 4 - 2;
        
        var box = new RigidBody(RigidPrimitiveType.Box, MaterialPreset.Wood)
        {
            Id = id,
            Mass = 1.5f,
            Transform = new TransformData
            {
                Position = new Vector3(x, 5 + Random.Shared.NextSingle() * 5, z),
                Scale = new Vector3(1, 1, 1)
            }
        };
        
        await PhysicsService.CreateRigidBodyAsync(box);
        await RenderingService.CreateRigidMeshAsync(box);
    }
    
    private async Task Spawn100()
    {
        for (int i = 0; i < 100; i++)
        {
            await SpawnSphere();
            
            // Yield every 10 to keep UI responsive
            if (i % 10 == 0)
            {
                await Task.Yield();
            }
        }
    }
    
    private async Task Spawn1000()
    {
        for (int i = 0; i < 1000; i++)
        {
            await SpawnSphere();
            
            if (i % 50 == 0)
            {
                await Task.Yield();
            }
        }
    }
    
    private async Task Reset()
    {
        await PhysicsService.ResetAsync();
        _spawnCounter = 0;
        BodyCount = 0;
        ContactCount = 0;
        
        // Spawn one sphere to start
        await SpawnSphere();
    }
    
    public async ValueTask DisposeAsync()
    {
        _disposed = true;
        _updateTimer?.Dispose();
        
        if (PhysicsService is IAsyncDisposable disposable)
        {
            await disposable.DisposeAsync();
        }
        
        await RenderingService.DisposeAsync();
    }
}

